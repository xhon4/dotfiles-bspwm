/* Definici칩n global */
* {
    background:         #100f10;  /* Gris oscuro de la paleta */
    foreground:         #9d9ea8;  /* Morado p치lido para texto */
    selected-bg:        #1E3249;  /* Rosa/morado vibrante para fondo de selecci칩n */
    selected-fg:        #9d9ea8;  /* Fondo oscuro para texto de selecci칩n */
    border:             #100f10;  /* Gris claro/morado para bordes */

    /* Fuente */
    font: "Terminus 12"; /* Mantenida para el estilo brutalista */
    text-color: @foreground;
}

/* Ventana principal */
window {
    background-color: @background;
    border: 0px; /* Sin borde, como en el original */
    border-color: @border;
    border-radius: 0px; /* Bordes cuadrados para brutalismo */
    padding: 10px;
    width: 600px;
}

/* Caja principal */
mainbox {
    background-color: @background;
    border: 0px;
    padding: 0px;
}

/* Caja de entrada */
inputbar {
    spacing: 0;
    background-color: @background;
    border: 1px;
    border-color: @border;
    border-radius: 0px;
    padding: 5px;
    children: [ prompt, entry ];
}

/* Prompt */
prompt {
    padding: 5px;
    background-color: @background;
    text-color: #9d9ea8;
}

/* Campo de texto */
entry {
    background-color: @background;
    text-color: @foreground;
    padding: 5px;
}

/* Lista de opciones */
listview {
    spacing: 0px;
    padding: 5px;
    background-color: @background;
    border: 1px;
    border-color: @border;
}

/* Elementos de la lista */
element {
    padding: 5px;
    background-color: @background;
    text-color: @foreground;
    border: 0px;
}

/* Elemento seleccionado */
element selected {
    background-color: @selected-bg;
    text-color: @selected-fg;
    border: 1px;
    border-color: @border;
}

/* Texto dentro de los elementos */
element-text {
    background-color: transparent;
    text-color: inherit;
    padding: 0px;
}